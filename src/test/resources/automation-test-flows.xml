<flow doc:name="CreateAccount" name="create-account">
	<stripe:create-account businessName="#[flowVars.businessName]" businessUrl="#[flowVars.businessUrl]" config-ref="Stripe" country="#[flowVars.country]" debitNegativeBalances="#[flowVars.debitNegativeBalances]" defaultCurrency="#[flowVars.defaultCurrency]" email="#[flowVars.email]" managed="#[flowVars.managed]" productDescription="#[flowVars.productDescription]" statementDescriptor="#[flowVars.statementDescriptor]" supportPhone="#[flowVars.supportPhone]">
		<stripe:metadata ref="#[flowVars.testMetadata]"/>
