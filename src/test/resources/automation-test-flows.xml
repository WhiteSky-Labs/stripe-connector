	<stripe:create-card-token config-ref="Stripe" cardId="#[flowVars.cardId]" customer="#[flowVars.customer]">
		<stripe:card ref="#[flowVars.card]"/>
	</stripe:create-card-token>
</flow>
    <flow doc:name="CreateBankAccountToken" name="create-bank-account-token">
	<stripe:create-bank-account-token config-ref="Stripe" bankAccountId="#[flowVars.bankAccountId]">
